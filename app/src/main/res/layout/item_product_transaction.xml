<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimens_16dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dimens_80dp"
        android:layout_height="@dimen/dimens_80dp"
        android:src="@drawable/img_sample_product"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Product"
            android:textSize="@dimen/text_16sp"
            android:fontFamily="@font/raleway_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="@dimen/dimens_4dp"
                android:layout_marginEnd="@dimen/dimens_4dp"
                android:fontFamily="@font/raleway_medium"/>

            <TextView
                android:id="@+id/tv_product_qty_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PCS"
                android:layout_marginTop="@dimen/dimens_4dp"
                android:fontFamily="@font/raleway_medium"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SubTotal : "
                android:layout_marginTop="@dimen/dimens_4dp"
                android:layout_marginEnd="@dimen/dimens_4dp"
                android:fontFamily="@font/raleway_medium"/>

            <TextView
                android:id="@+id/tv_total_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 0"
                android:layout_marginTop="@dimen/dimens_4dp"
                android:fontFamily="@font/raleway_medium"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>